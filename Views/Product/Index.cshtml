@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Ürün Listesi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>
        <th>Görsel</th>
    </tr>
    @if (Model != null)
    {

        foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductId</td>
                <td>@p.ProductName</td>
                <td>@p.Brand</td>
                <td>@p.Stock</td>
                <td>@p.PurchasePrice</td>
                <td>@p.SalePrice</td>
                <td>@p.Category.CategoryName</td>
                <td>@p.ProductImage</td>

                <td><a href="/Product/Delete/@p.ProductId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/ProductUpdate/@p.ProductId" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    }
    else
    {
        <p>Model boş veya null.</p>
    }
</table>
<a href="/Product/ProductAdd" class="btn btn-primary">Yeni Ürün Ekle</a></td>
