@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<InvoiceItem>
@{
    ViewBag.Title = "InvoiceDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Detay</h2>
<br />
<div style="background-color:darkgrey">

</div>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>


<table class="table table-hover" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
        <th></th>
    </tr>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.InvoiceItemID</td>
            <td>@e.Description</td>
            <td>@e.Amount</td>
            <td>@e.UnitPrice</td>
            <td>@e.Price</td>
            <td>
                @*<a href="/Department/DepartmentEmployeeSale/@e.EmployeeID" class="btn btn-default"
                   style="background-color:navajowhite">Satışlar</a>*@
            </td>

            @*<td><a href="/Department/Delete/@k.DepartmentID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Department/DepartmentUpdate/@k.DepartmentID" class="btn btn-success">Güncelle</a></td>*@

        </tr>
    }
</table>
<a href="/Invoice/InvoiceItemAdd/@ViewBag.id" class="btn btn-info">Yeni Kalem Girişi</a>

