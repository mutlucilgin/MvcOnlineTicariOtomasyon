@model MvcOnlineTicariOtomasyon.Models.Siniflar.Category
@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Kategori Güncelleme</h2>
<br />

@using(Html.BeginForm("Update","Category",FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.CategoryName)
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.HiddenFor(x => x.CategoryID)
    </div>
    <button class="btn btn-info">Kaydet</button>
}
