@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Employee>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay</h2>
<br />
<div style="background-color:darkgrey">

</div>
<br />
@*<ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">
        Departman Adı: @ViewBag.departmentName</li>
    </ol>*@

<div style="background-color:lightgrey;padding:10px 16px">
    Departman Adı: @ViewBag.departmentName
</div>
<table class="table table-hover" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th></th>
    </tr>
    @foreach (var e in Model)
    {
<tr>
    <td>@e.EmployeeID</td>
    <td>@e.EmployeeName</td>
    <td>@e.EmployeeSurname</td>
    <td>@e.EmployeeImage</td>
    <td><a href="/Department/DepartmentEmployeeSale/@e.EmployeeID" class="btn btn-default" 
           style="background-color:navajowhite">Satışlar</a></td>

    @*<td><a href="/Department/Delete/@k.DepartmentID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Department/DepartmentUpdate/@k.DepartmentID" class="btn btn-success">Güncelle</a></td>*@

</tr>
    }
</table>


